#include <iostream>

using namespace std;

class Student {

private:

    int stdid;

    string stdName;

    int s1,s2,s3,s4,s5;

    double avg;

 

public:

    inline void readData() {

        cout << "Enter student id: ";

        cin >> stdid;

        cout << "Enter student Name: ";

        cin >> stdName;

        cout << "Enter 5 sub marks: ";

        cin >>s1>>s2>>s3>>s4>>s5;

    }

    inline void calculateavg() {

        avg=(s1+s2+s3+s4+s5)/5;

    }

    inline void printData() {

        cout << "Student id: " << stdid << endl;

        cout << "Student Name: " << stdName << endl;

        cout << "sub 1: " << s1 << endl;

        cout << "sub 2: " << s2 << endl;

        cout << "sub 3: " << s3 << endl;

        cout << "sub 4: " << s4 << endl;

        cout << "sub 5: " << s5 << endl;

        cout << "avg marks: " << avg << endl;

        cout << "-----------------------" << endl;

    }

};

int main() {

    int n;

    cout << "Enter the number of students: ";

    cin >> n;

    Student* student = new Student[n];

    for (int i = 0; i < n; i++) {

        cout << "Enter details of student 1 " << i + 1 << ":" << endl;

        student[i].readData();

        student[i].calculateavg();

    }

    cout << "Student data Data:" << endl;

    for (int i = 0; i < n; i++) {

        student[i].printData();

    }

    delete[] student;

    return 0;

    }
